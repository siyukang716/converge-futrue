<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.roster.mapper.SchedulingRulesMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cloud.roster.entity.SchedulingRulesEntity">
        <id column="arrange_rule_id" property="arrangeRuleId"/>
        <result column="arrange_rule_name" property="arrangeRuleName"/>
        <result column="arrange_rule_type" property="arrangeRuleType"/>
        <result column="work_start_time" property="workStartTime"/>
        <result column="working_hours" property="workingHours"/>
        <result column="work_end_time" property="workEndTime"/>
        <result column="post_status" property="postStatus"/>
        <result column="insert_time" property="insertTime"/>
        <result column="insert_uid" property="insertUid"/>
        <result column="update_uid" property="updateUid"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        arrange_rule_id
        ,arrange_rule_name,arrange_rule_type,work_start_time,working_hours,work_end_time,post_status,insert_time,insert_uid,update_uid,update_time
    </sql>
    <select id="getSchedulingPlan" resultType="com.cloud.roster.vo.WorkRecordVo">
        SELECT rsr.arrange_rule_id arrangeRuleId, rsr.work_start_time workStartTime,rsr.working_hours workingHours ,rrp.user_id userId
        FROM roster_scheduling_rules rsr
                 INNER	JOIN roster_rules_person rrp ON rsr.arrange_rule_id  = rrp.arrange_rule_id
            ${ew.customSqlSegment}
    </select>
    <select id="getPageSchedulingPlan" resultType="com.cloud.roster.vo.WorkRecordVo">
        SELECT rsr.arrange_rule_id arrangeRuleId, rsr.work_start_time workStartTime,rsr.working_hours workingHours ,rrp.user_id userId
        FROM roster_scheduling_rules rsr
                 INNER	JOIN roster_rules_person rrp ON rsr.arrange_rule_id  = rrp.arrange_rule_id
            ${ew.customSqlSegment}
    </select>

</mapper>