                        #if($field.isPk.equals("0"))##生成普通字段
                            , {field: '${field.javaField}', title: '${field.columnComment}'}
                        #end
                    #end
                    , {fixed: 'right', title: '操作', width: 180, align: 'center', toolbar: '#optBar'}
                ]]
                , done: function (res, curr, count) {
