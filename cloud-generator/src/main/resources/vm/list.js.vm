function reload${fileName}List() {
    loadTable('${fileName}List',{})
}

function add${fileName}() {
    formAssignment(fromId,{"$primarykey":''})
    //echoForm(,{},fromId,'GET')
    openForm('${fileName}Div',fromId,'添加'+menuTitle);
}

function echoFormCallback(data,formId) {
    openForm('${fileName}Div',formId,'修改'+menuTitle);
    formAssignment(formId,data.data);
}

function formSubmit(data) {
    submitForm(aOrUUrl,divId,fromId,data.field,'POST',reload${fileName}List);
}
function del(data) {
    submitForm(delUrl,divId,fromId, {'$primarykey':data.$primarykey},'GET',reload${fileName}List)
}
function edit(data) {
    echoForm(getUrl,{'$primarykey':data.$primarykey},fromId,'GET');
}

