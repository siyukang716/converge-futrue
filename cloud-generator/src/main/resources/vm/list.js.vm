                    //得到数据总量
                    //console.log(count);
                    //$("[data-field='id']").css('display', 'none');
                    pageCurr = curr;
                }
            });
        //监听工具条
        table.on('tool(${fileName}Table)', function (obj) {
            var data = obj.data;
            if (obj.event === 'del') {
                del(data);
            }else {
                edit(data);
            }
        });
        //监听提交
        form.on('submit(${fileName}Submit)', function (data) {
            // TODO 校验
            formSubmit(data);
            return false;
        });
        /**
         * toolbar监听事件
